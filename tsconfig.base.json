{
  "compilerOptions": {
    "module": "commonjs",
    "baseUrl": ".",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "removeComments": true,
    "lib": [
      "ES2021"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2021",
    "sourceMap": true,
    "jsx": "react-jsx",
    "noErrorTruncation": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/dist",
    "**/coverage"
  ]
}