{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "moduleDetection": "force",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "isolatedModules": true,
    "sourceMap": true,
    "outDir": "./dist"
  },
  "include": [
    "src",
    "test"
  ]
}